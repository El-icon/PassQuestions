@model PassQuestions.Models.question

@{
    ViewBag.Title = "Edit";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h4 class="card-title">Edit Questiion</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-4">
                        <label class="form-label">Name</label>
                        @Html.EditorFor(model => model.names, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.names, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Subject Type</label>
                        @Html.DropDownList("subjectid", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.subjectid, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Exam Year</label>
                        @Html.DropDownList("examyearid", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.examyearid, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Exam Type</label>
                        @Html.DropDownList("examtypeid", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.examtypeid, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Insert Date</label>
                        <input type="text" class="form-control" required="" name="insertdate" value="@Model.insertdate"/>
                        @Html.ValidationMessageFor(model => model.insertdate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-12">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="description" rows="5">@Model.description</textarea>
                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-12 text-center">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a href="@Url.Action("Index", "questions")" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
