@model IEnumerable<PassQuestions.Models.subject>

@{
    ViewBag.Title = "Index";
    int sn = 0;
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title"> SUBJECTS </h4>
                <a href="@Url.Action("create","subjects")" class="btn btn-success">Create New Subject</a>
                <br />
                <br />

                <table id="datatable-buttons"
                       class="table table-striped table-bordered dt-responsive nowrap"
                       style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    <tbody>
                        @foreach (var item in Model.OrderBy(p => p.name))
                        {
                            sn++;
                            <tr>
                                <td>
                                    @sn
                                </td>
                                <td>
                                    <a href="@Url.Action("Details/"+item.id,"subjects")">
                                        @item.name
                                    </a>
                                </td>
                                <td>@item.description</td>
                                <td>
                                    <a href="@Url.Action("Edit", "subjects", new { id = item.id })">
                                        <i class="fa fa-edit btn btn-info btn-sm"></i>
                                    </a> |
                                    <a href="@Url.Action("Details", "subjects", new { id = item.id })">
                                        <i class="fa fa-info btn btn-success btn-sm"></i>
                                    </a> |
                                    <a href="@Url.Action("Delete", "subjects", new { id = item.id })">
                                        <i class="fa fa-trash btn btn-danger btn-sm"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- end col -->
</div>
<!-- end row -->